<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="cacheEnabled" value="false" />
		<setting name="localCacheScope" value="STATEMENT" />
		<!-- using slf4j to output log -->
		<setting name="logImpl" value="SLF4J"/>
	</settings>

	<typeAliases>
		<typeAlias type="com.yuzooo.b2b.domain.AdminPermission" alias="AdminPermission" />
	</typeAliases>

	<plugins>
		<plugin interceptor="com.iterror.libu.common.dao.plugin.SelectCountSqlInterceptor" />
		<plugin interceptor="com.iterror.libu.common.dao.plugin.OffsetLimitInterceptor">
			<property name="dialectClass" value="com.iterror.libu.common.dao.dialect.MySQLDialect" />
		</plugin>
	</plugins>

	<mappers>
		<mapper resource="mapper/admin_permission_mapper.xml" />
	</mappers>
</configuration>
