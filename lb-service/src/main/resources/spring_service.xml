<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath:spring_service_config.xml"/>

	<!-- 数据接口 -->
	<bean id="myBatisDAO" class="com.iterror.libu.common.dao.MyBatisDAO">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"/>
	</bean>
	<context:component-scan base-package="com.iterror.libu.service.*" use-default-filters="false">
		<context:include-filter type="annotation"
								expression="org.springframework.stereotype.Service"/>
		<context:include-filter type="annotation"
								expression="org.springframework.stereotype.Repository"/>
		<context:include-filter type="annotation"
								expression="org.springframework.stereotype.Component"/>
	</context:component-scan>

	<!-- similarly, don't forget the PlatformTransactionManager -->
	<bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource"/>
	</bean>

</beans>